@model HealthCareApp.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="mb-0">üîê User Login</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                </form>
                
                <hr class="my-4" />
                
                <div class="text-center">
                    <p class="mb-2">Don't have an account?</p>
                    <a asp-action="Register" class="btn btn-outline-secondary">Register as Patient</a>
                </div>
            </div>
        </div>
        
        <div class="mt-4 text-center">
            <h6>Sample Login Credentials:</h6>
            <div class="row">
                <div class="col-md-4">
                    <small class="text-muted">
                        <strong>Admin:</strong><br/>
                        admin1 / admin123
                    </small>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">
                        <strong>Doctor:</strong><br/>
                        dr.smith / doc123
                    </small>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">
                        <strong>Patient:</strong><br/>
                        john.doe / pat123
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
