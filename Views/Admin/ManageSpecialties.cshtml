@model List<HealthCareApp.Models.Specialty>
@{
    ViewData["Title"] = "Manage Specialties";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-gray-800">ðŸ©º Manage Specialties</h1>
                <a href="@Url.Action("AddSpecialty", "Admin")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Specialty
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Specialties</h6>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="specialtiesTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var specialty in Model)
                            {
                                <tr>
                                    <td>@specialty.SpecialID</td>
                                    <td>@specialty.SpecialtyName</td>
                                    <td>@specialty.Description</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditSpecialty" asp-route-id="@specialty.SpecialID" class="btn btn-info btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form asp-action="DeleteSpecialty" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@specialty.SpecialID" />
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this specialty?');">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="fas fa-stethoscope fa-3x mb-3"></i>
                    <p>No specialties found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#specialtiesTable').DataTable({
                "pageLength": 10,
                "order": [[0, "desc"]],
                "responsive": true
            });
        });
    </script>
}
