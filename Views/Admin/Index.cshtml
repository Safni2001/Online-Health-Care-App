@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2 text-gray-800">
                        <i class="fas fa-shield-alt text-primary"></i> Admin Dashboard
                    </h1>
                    <p class="text-muted mb-0">Welcome back, Administrator! Monitor and manage your healthcare system.
                    </p>
                </div>
                <div class="text-end">
                    <small class="text-muted">Today: @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-2">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-2">
                                Total Users
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUsers</div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <i class="fas fa-users fa-lg text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-2">
                                Total Doctors
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalDoctors</div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <i class="fas fa-user-md fa-lg text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-2">
                                Total Patients
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalPatients</div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <i class="fas fa-user-injured fa-lg text-info"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
                                Total Appointments
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalAppointments</div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <i class="fas fa-calendar-alt fa-lg text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-4 border-bottom">
                    <h5 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-bolt text-warning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Reports", "Admin")"
                                class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-chart-bar fa-2x mb-3"></i>
                                <span class="fw-bold">View Reports</span>
                                <small class="text-white-50 mt-1">Analytics & insights</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("ManageDoctors", "Admin")"
                                class="btn btn-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-user-md fa-2x mb-3"></i>
                                <span class="fw-bold">Manage Doctors</span>
                                <small class="text-white-50 mt-1">Doctor administration</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("ManagePatients", "Admin")"
                                class="btn btn-info btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-users fa-2x mb-3"></i>
                                <span class="fw-bold">Manage Patients</span>
                                <small class="text-white-50 mt-1">Patient administration</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("AddDoctor", "Admin")"
                                class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-plus fa-2x mb-3"></i>
                                <span class="fw-bold">Add Doctor</span>
                                <small class="text-white-50 mt-1">Register new doctor</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Overview Section -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-4 border-bottom">
                    <h5 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-tachometer-alt text-primary"></i> System Overview
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-primary border-0 shadow-sm mb-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="fas fa-info-circle text-primary"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="alert-heading mb-1">Healthcare Management System is running smoothly</h6>
                                <p class="mb-0">All core services are operational and user activity is normal.</p>
                            </div>
                            <a href="@Url.Action("Reports", "Admin")" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
