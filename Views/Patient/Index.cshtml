    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("FindDoctors", "Patient")" class="btn btn-primary btn-block">
                                <i class="fas fa-search"></i> Find Doctors
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-success btn-block">
                                <i class="fas fa-plus"></i> Book Appointment
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("MyAppointments", "Patient")" class="btn btn-info btn-block">
                                <i class="fas fa-calendar"></i> My Appointments
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("MedicalRecords", "Patient")" class="btn btn-warning btn-block">
                                <i class="fas fa-file-medical"></i> Medical Records
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("PayFees", "Patient")" class="btn btn-warning btn-block">
                                <i class="fas fa-credit-card"></i> Pay Fees
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Feedback", "Patient")" class="btn btn-secondary btn-block">
                                <i class="fas fa-comment-dots"></i> Leave Feedback
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

