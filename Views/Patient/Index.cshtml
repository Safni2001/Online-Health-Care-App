<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2 text-gray-800">
                        <i class="fas fa-user-injured text-success"></i> Patient Dashboard
                    </h1>
                    <p class="text-muted mb-0">Welcome back, @Context.Session.GetString("Username")!</p>
                </div>
                <div class="text-end">
                    <small class="text-muted">Today: @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Card -->
