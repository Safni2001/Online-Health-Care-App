    <!-- Quick Actions Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-4 border-bottom">
                    <h5 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-bolt text-warning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("FindDoctors", "Patient")" class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none" style="min-height: 120px;">
                                <i class="fas fa-search fa-2x mb-3"></i>
                                <span class="fw-bold">Find Doctors</span>
                                <small class="text-white-50 mt-1">Search specialists</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none" style="min-height: 120px;">
                                <i class="fas fa-calendar-plus fa-2x mb-3"></i>
                                <span class="fw-bold">Book Appointment</span>
                                <small class="text-white-50 mt-1">Schedule visit</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("MyAppointments", "Patient")" class="btn btn-info btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none" style="min-height: 120px;">
                                <i class="fas fa-calendar-check fa-2x mb-3"></i>
                                <span class="fw-bold">My Appointments</span>
                                <small class="text-white-50 mt-1">View scheduled visits</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("MedicalRecords", "Patient")" class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none" style="min-height: 120px;">
                                <i class="fas fa-file-medical-alt fa-2x mb-3"></i>
                                <span class="fw-bold">Medical Records</span>
                                <small class="text-white-50 mt-1">Health history</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Actions -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-credit-card fa-2x text-danger"></i>
                    </div>
                    <h5 class="card-title">Payment Management</h5>
                    <p class="card-text text-muted">View payment history and pay outstanding consultation fees online.</p>
                    <a href="@Url.Action("PayFees", "Patient")" class="btn btn-danger">
                        <i class="fas fa-money-bill-wave me-1"></i> Manage Payments
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="bg-secondary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-comment-dots fa-2x text-secondary"></i>
                    </div>
                    <h5 class="card-title">Feedback & Reviews</h5>
                    <p class="card-text text-muted">Share your experience and help us improve our healthcare services.</p>
                    <a href="@Url.Action("Feedback", "Patient")" class="btn btn-secondary">
                        <i class="fas fa-star me-1"></i> Leave Feedback
                    </a>
                </div>
            </div>
        </div>
    </div>

