@{
    ViewData["Title"] = "Pay Consultation Fees";
    var paymentsWithDoctors = ViewBag.PaymentsWithDoctors as dynamic;
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2 text-gray-800">
                        <i class="fas fa-credit-card text-primary"></i> Pay Consultation Fees
                    </h1>
                    <p class="text-muted mb-0">Manage your payment history and pending dues</p>
                </div>
                <div>
                    <a href="@Url.Action("PaymentHistory", "Patient")" class="btn btn-info me-2">
                        <i class="fas fa-history"></i> Payment History
                    </a>
                    <a href="@Url.Action("Index", "Patient")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fas fa-check-circle text-success"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle text-danger"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 60px; height: 60px;">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                    <h4 class="text-success mb-1">Rs.@ViewBag.TotalPaid</h4>
                    <p class="text-muted mb-0">Total Paid</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 60px; height: 60px;">
                        <i class="fas fa-clock fa-2x text-danger"></i>
                    </div>
                    <h4 class="text-danger mb-1">Rs.@ViewBag.TotalDue</h4>
                    <p class="text-muted mb-0">Amount Due</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Payments Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-gradient-primary py-4">
            <h5 class="m-0 font-weight-bold">
                <i class="fas fa-history"></i> Payment History
            </h5>
        </div>
        <div class="card-body p-4">
            @if (paymentsWithDoctors != null &&
                        ((System.Collections.IEnumerable?)paymentsWithDoctors)?.Cast<dynamic>().Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 py-3"><i class="fas fa-calendar text-primary me-2"></i>Date</th>
                                <th class="border-0 py-3"><i class="fas fa-user-md text-success me-2"></i>Doctor</th>
                                <th class="border-0 py-3"><i class="fas fa-receipt text-info me-2"></i>Booking ID</th>
                                <th class="border-0 py-3"><i class="fas fa-dollar-sign text-success me-2"></i>Total Fee</th>
                                <th class="border-0 py-3"><i class="fas fa-money-bill-wave text-warning me-2"></i>Remaining
                                </th>
                                <th class="border-0 py-3"><i class="fas fa-info-circle text-secondary me-2"></i>Status</th>
                                <th class="border-0 py-3"><i class="fas fa-cogs text-danger me-2"></i>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in paymentsWithDoctors!)
                            {
                                <tr class="border-bottom">
                                    <td class="py-4">
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-bold">@item.Payment.PaymentDate.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@item.Payment.PaymentDate.ToString("hh:mm tt")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="d-flex align-items-center">
                                            <div class="fw-bold">@item.DoctorName</div>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-bold">@(item.Payment.BookingRef ?? "N/A")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="fw-bold text-success fs-5">Rs.@item.Payment.TotalAmount</div>
                                        <small class="text-muted">Total consultation fee</small>
                                    </td>
                                    <td class="py-4">
                                        <div class="fw-bold text-primary fs-5">Rs.@item.Payment.Amount</div>
                                        <small class="text-muted">Amount due</small>
                                    </td>
                                    <td class="py-4">
                                        @if (item.Payment.PaymentStatus == "Completed")
                                        {
                                            <span class="badge bg-success px-3 py-2">
                                                <i class="fas fa-check-circle me-1"></i> Completed
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger px-3 py-2">
                                                <i class="fas fa-clock me-1"></i> Pending
                                            </span>
                                        }
                                    </td>
                                    <td class="py-4">
                                        @if (item.Payment.PaymentStatus != "Completed")
                                        {
                                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#paymentModal" data-payment-id="@item.Payment.PaymentID"
                                                data-amount="@item.Payment.Amount" data-booking-id="@item.Payment.BookingRef"
                                                data-doctor="@item.DoctorName">
                                                <i class="fas fa-credit-card me-1"></i> Pay Now
                                            </button>
                                        }
                                        else
                                        {
                                            <div class="text-success">
                                                <i class="fas fa-check-circle fa-2x"></i>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                        style="width: 100px; height: 100px;">
                        <i class="fas fa-credit-card fa-3x text-muted"></i>
                    </div>
                    <h5 class="text-muted mb-2">No Payment Records Found</h5>
                    <p class="text-muted mb-4">Your pending consultation fees will appear here when you book appointments.
                    </p>
                    <a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-primary">
                        <i class="fas fa-calendar-plus me-1"></i> Book Appointment
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="paymentModalLabel">
                    <i class="fas fa-credit-card"></i> Complete Payment
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="PayFees" method="post" id="paymentForm">
                    <input type="hidden" name="PaymentID" id="modalPaymentId" />

                    <!-- Payment Summary -->
                    <div class="alert alert-info border-0 shadow-sm mb-4">
                        <h6 class="alert-heading">Payment Summary</h6>
                        <div class="row">
                            <div class="col-sm-6"><strong>Doctor:</strong> <span id="modalDoctor">-</span></div>
                            <div class="col-sm-6"><strong>Booking ID:</strong> <span id="modalBookingId">-</span></div>
                            <div class="col-sm-6"><strong>Amount Due:</strong> Rs.<span id="modalAmount">0</span></div>
                        </div>
                    </div>

                    <!-- Payment Amount -->
                    <div class="mb-4">
                        <label for="modalPayAmount" class="form-label fw-bold">
                            <i class="fas fa-money-bill-wave text-success"></i> Payment Amount
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">Rs.</span>
                            <input type="number" step="0.01" min="0" class="form-control form-control-lg"
                                id="modalPayAmount" name="Amount" placeholder="Enter payment amount" required />
                        </div>
                        <small class="form-text text-muted">Enter the amount you want to pay now.</small>
                    </div>

                    <!-- Banking Details -->
                    <div class="card border-success mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0 text-success">
                                <i class="fas fa-university"></i> Banking Details
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="modalBankName" class="form-label">
                                        <i class="fas fa-university text-primary"></i> Bank Name
                                    </label>
                                    <input type="text" class="form-control" id="modalBankName" name="BankName"
                                        placeholder="e.g., Chase Bank" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="modalCardNumber" class="form-label">
                                        <i class="fas fa-credit-card text-info"></i> Card Number
                                    </label>
                                    <input type="text" class="form-control" id="modalCardNumber" name="CardNumber"
                                        placeholder="1234-5678-9012-3456" maxlength="19" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="modalExpiryDate" class="form-label">
                                        <i class="fas fa-calendar-alt text-warning"></i> Expiry Date
                                    </label>
                                    <input type="text" class="form-control" id="modalExpiryDate" name="ExpiryDate"
                                        placeholder="MM/YYYY" maxlength="7" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="modalCVN" class="form-label">
                                        <i class="fas fa-lock text-danger"></i> CVN/CVC
                                    </label>
                                    <input type="password" class="form-control" id="modalCVN" name="CVN"
                                        placeholder="123" maxlength="4" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="submit" form="paymentForm" class="btn btn-primary">
                    <i class="fas fa-check"></i> Complete Payment
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var paymentModal = document.getElementById('paymentModal');
            paymentModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var paymentId = button.getAttribute('data-payment-id');
                var amount = button.getAttribute('data-amount');
                var bookingId = button.getAttribute('data-booking-id');
                var doctor = button.getAttribute('data-doctor');

                // Update modal content
                document.getElementById('modalPaymentId').value = paymentId;
                document.getElementById('modalAmount').textContent = amount;
                document.getElementById('modalPayAmount').value = amount;
                document.getElementById('modalBookingId').textContent = bookingId || 'N/A';
                document.getElementById('modalDoctor').textContent = doctor || 'General';
            });

            // Card number formatting
            var cardNumberInput = document.getElementById('modalCardNumber');
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function (e) {
                    var value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
                    var formattedValue = value.match(/.{1,4}/g)?.join('-') || value;
                    if (formattedValue !== e.target.value) {
                        e.target.value = formattedValue;
                    }
                });
            }

            // Expiry date formatting
            var expiryInput = document.getElementById('modalExpiryDate');
            if (expiryInput) {
                expiryInput.addEventListener('input', function (e) {
                    var value = e.target.value.replace(/\D/g, '');
                    if (value.length >= 2) {
                        value = value.substring(0, 2) + '/' + value.substring(2, 6);
                    }
                    e.target.value = value;
                });
            }
        });
    </script>
}
