@model List<dynamic>
@{
    ViewData["Title"] = "Payment History";
    var paymentHistory = Model ?? new List<dynamic>();
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2 text-gray-800">
                        <i class="fas fa-history text-info"></i> Payment History
                    </h1>
                    <p class="text-muted mb-0">Complete transaction history for @ViewBag.PatientName</p>
                </div>
                <div>
                    <a href="@Url.Action("PayFees", "Patient")" class="btn btn-primary me-2">
                        <i class="fas fa-credit-card"></i> Pay Fees
                    </a>
                    <a href="@Url.Action("Index", "Patient")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fas fa-check-circle text-success"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }


     @if (paymentHistory != null && paymentHistory.Count > 0)
    {
        <div class="row mt-2 mb-2">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="text-success mb-1">
                            Rs.@{
                                decimal totalPaid = 0;
                                foreach (var item in paymentHistory)
                                {
                                    var p = item?.Payment as HealthCareApp.Models.Payment;
                                    if (p?.PaymentStatus == "Completed")
                                    {
                                        totalPaid += p.Amount;
                                    }
                                }
                            }@totalPaid
                        </h4>
                        <p class="text-muted mb-0">Total Paid</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="text-warning mb-1">
                            Rs.@{
                                decimal totalPending = 0;
                                foreach (var item in paymentHistory)
                                {
                                    var p = item?.Payment as HealthCareApp.Models.Payment;
                                    if (p?.PaymentStatus == "Pending")
                                    {
                                        totalPending += p.Amount;
                                    }
                                }
                            }@totalPending
                        </h4>
                        <p class="text-muted mb-0">Pending Amount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="text-info mb-1">
                            @{
                                int totalCount = 0;
                                foreach (var item in paymentHistory)
                                {
                                    if (item?.Payment is HealthCareApp.Models.Payment)
                                    {
                                        totalCount++;
                                    }
                                }
                            }@totalCount
                        </h4>
                        <p class="text-muted mb-0">Total Transactions</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Payment History Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-gradient-info py-4">
            <h5 class="m-0 font-weight-bold">
                <i class="fas fa-list-ul"></i> All Payment Transactions
            </h5>
        </div>
        <div class="card-body p-4">
            @if (paymentHistory != null && paymentHistory.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-hashtag text-primary me-2"></i>Transaction ID</th>
                                <th><i class="fas fa-calendar text-primary me-2"></i>Date</th>
                                <th><i class="fas fa-receipt text-info me-2"></i>Booking ID</th>
                                <th><i class="fas fa-dollar-sign text-success me-2"></i>Amount</th>
                                <th><i class="fas fa-info-circle text-secondary me-2"></i>Status</th>
                                <th><i class="fas fa-credit-card text-danger me-2"></i>Payment Method</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in paymentHistory)
                            {
                                var payment = item?.Payment as HealthCareApp.Models.Payment;
                                if (payment == null) { continue; }

                                var doctorName = item?.DoctorName as string ?? "N/A";
                                DateTime? apptDate = item?.AppointmentDate as DateTime?;
                                <tr>
                                    <td>
                                        <div class="fw-bold text-primary">#@(payment?.PaymentID ?? 0)</div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-bold">@payment?.PaymentDate.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@payment?.PaymentDate.ToString("hh:mm tt")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-bold">@(payment?.BookingRef ?? "N/A")</div>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-success fs-5">Rs.@(payment?.Amount ?? 0)</div>
                                    </td>
                                    <td>
                                        @if (payment?.PaymentStatus == "Completed")
                                        {
                                            <span class="badge bg-success px-3 py-2"><i class="fas fa-check-circle me-1"></i> Completed</span>
                                        }
                                        else if (payment?.PaymentStatus == "Pending")
                                        {
                                            <span class="badge bg-warning px-3 py-2"><i class="fas fa-clock me-1"></i> Pending</span>
                                        }
                                        else if (payment?.PaymentStatus == "Failed")
                                        {
                                            <span class="badge bg-danger px-3 py-2"><i class="fas fa-times-circle me-1"></i> Failed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary px-3 py-2">Unknown</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(payment?.BankName))
                                        {
                                            <div class="fw-bold">@payment.BankName</div>
                                            @if (!string.IsNullOrEmpty(payment?.CardNumber))
                                            {
                                                <small class="text-muted">
                                                    ****-****-****-@payment.CardNumber.Substring(Math.Max(0, payment.CardNumber.Length - 4))
                                                </small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Cash/Other</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5 class="text-muted mb-2">No Payment History Found</h5>
                    <p class="text-muted mb-4">Your payment transactions will appear here once you make payments.</p>
                    <a href="@Url.Action("PayFees", "Patient")" class="btn btn-primary">
                        <i class="fas fa-credit-card me-1"></i> Make Payment
                    </a>
                </div>
            }
        </div>
    </div>
</div>
