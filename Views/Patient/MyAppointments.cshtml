@model List<HealthCareApp.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">ðŸ“‹ My Appointments</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Appointment History</h6>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Doctor</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appt in Model)
                                    {
                                        <tr>
                                            <td>@appt.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                            <td>@(appt.AppointmentTime)</td>
                                            <td>@appt.Doctor?.Name</td>
                                            <td>@appt.Location?.LocationName</td>
                                            <td>
                                                @if (appt.IsCancelled == true)
                                                {
                                                    <span class="badge bg-primary">Confirmed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#fb_@appt.AppointmentID">Feedback</button>
                                                <div id="fb_@appt.AppointmentID" class="collapse mt-2">
                                                    <form asp-action="Feedback" method="post">
                                                        <input type="hidden" name="appointmentId" value="@appt.AppointmentID" />
                                                        <div class="mb-2">
                                                            <label for="rating_@appt.AppointmentID" class="form-label">Rating (1-5)</label>
                                                            <select id="rating_@appt.AppointmentID" name="rating" class="form-select form-select-sm" required>
                                                                <option value="5">5</option>
                                                                <option value="4">4</option>
                                                                <option value="3">3</option>
                                                                <option value="2">2</option>
                                                                <option value="1">1</option>
                                                            </select>
                                                        </div>
                                                        <div class="mb-2">
                                                            <label for="message_@appt.AppointmentID" class="form-label">Comments</label>
                                                            <textarea id="message_@appt.AppointmentID" name="message" class="form-control form-control-sm" rows="2" placeholder="Share your feedback..."></textarea>
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-calendar fa-3x mb-3"></i>
                            <p>No appointments found.</p>
                            <small>Your appointment history will appear here after you book appointments.</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
