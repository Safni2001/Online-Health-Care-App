@model HealthCareApp.Controllers.BookAppointmentViewModel
@{
    ViewData["Title"] = "Book Appointment";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2 text-gray-800">
                        <i class="fas fa-calendar-plus text-success"></i> Book Appointment
                    </h1>
                    <p class="text-muted mb-0">Schedule your consultation with our healthcare professionals</p>
                </div>
                <a href="@Url.Action("Index", "Patient")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle text-danger"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fas fa-check-circle text-success"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient-success text-white py-4">
                    <h5 class="m-0 font-weight-bold">
                        <i class="fas fa-stethoscope"></i> Appointment Booking Form
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="BookAppointment" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label for="doctorDropdown" class="form-label">Doctor *</label>
                            <select asp-for="DoctorID" class="form-control" id="doctorDropdown" name="DoctorID">
                                <option value="">-- Select Doctor --</option>
                                @if (ViewBag.Doctors != null)
                                {
                                    foreach (var doc in ViewBag.Doctors)
                                    {
                                        <option value="@doc.DoctorID" 
                                                data-available="@doc.AvailableTime" 
                                                data-location="@doc.Location?.LocationID" 
                                                data-fee="@doc.Fees"
                                                selected="@(Model.DoctorID == doc.DoctorID ? "selected" : null)">
                                            @doc.Name (@doc.Specialty?.SpecialtyName)
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="DoctorID" class="text-danger"></span>
                        </div>
                        <div class="mb-3" id="doctorAvailableTime" style="display:none;">
                            <label class="form-label">Available Time:</label>
                            <div id="availableTimeText" class="fw-bold"></div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Doctor Fee:</label>
                            <div id="doctorFeeText" class="fw-bold">-</div>
                        </div>
                        <div class="mb-3">
                            <label for="payNowAmount" class="form-label">
                                <i class="fas fa-money-bill-wave text-success"></i> Pay Now Amount
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">Rs.</span>
                                <input type="number" step="0.01" min="0" class="form-control" id="payNowAmount" asp-for="PayNowAmount" placeholder="Enter amount to pay now" />
                            </div>
                        </div>
                        
                        <!-- Banking Details Section -->
                        <div id="bankingDetails" style="display:none;">
                            <div class="card border-success mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0 text-success">
                                        <i class="fas fa-credit-card"></i> Banking Details
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="BankName" class="form-label">
                                                <i class="fas fa-university text-primary"></i> Bank Name
                                            </label>
                                            <input asp-for="BankName" class="form-control" placeholder="e.g., Chase Bank" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="CardNumber" class="form-label">
                                                <i class="fas fa-credit-card text-info"></i> Card Number
                                            </label>
                                            <input asp-for="CardNumber" class="form-control" placeholder="1234-5678-9012-3456" maxlength="19" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="ExpiryDate" class="form-label">
                                                <i class="fas fa-calendar-alt text-warning"></i> Expiry Date
                                            </label>
                                            <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YYYY" maxlength="7" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="CVN" class="form-label">
                                                <i class="fas fa-lock text-danger"></i> CVN/CVC
                                            </label>
                                            <input asp-for="CVN" class="form-control" placeholder="123" maxlength="4" type="password" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="locationDropdown" class="form-label">Location</label>
                            <select asp-for="LocationID" class="form-control" id="locationDropdown" name="LocationID">
                                <option value="">-- Select Location --</option>
                                @if (ViewBag.Locations != null)
                                {
                                    foreach (var location in ViewBag.Locations)
                                    {
                                        <option value="@location.LocationID" selected="@(Model.LocationID == location.LocationID ? "selected" : null)">
                                            @location.LocationName
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="LocationID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="AppointmentDate" class="form-label">Date *</label>
                            <input asp-for="AppointmentDate" class="form-control" type="date" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="AppointmentTime" class="form-label">Time *</label>
                            <input asp-for="AppointmentTime" class="form-control" type="time" />
                            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Patient")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Book Appointment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var doctorDropdown = document.getElementById('doctorDropdown');
            var availableTimeDiv = document.getElementById('doctorAvailableTime');
            var availableTimeText = document.getElementById('availableTimeText');
            var locationDropdown = document.getElementById('locationDropdown');
            var doctorFeeText = document.getElementById('doctorFeeText');
            
            // Store all location options
            var allLocationOptions = Array.from(locationDropdown.options).slice(1); // Exclude "Select Location" option
            
            function updateDoctorDetails() {
                var selected = doctorDropdown.options[doctorDropdown.selectedIndex];
                var available = selected.getAttribute('data-available');
                var locationId = selected.getAttribute('data-location');
                var fee = selected.getAttribute('data-fee');
                
                // Update available time
                if (available && available.trim() !== '') {
                    availableTimeText.textContent = available;
                    availableTimeDiv.style.display = 'block';
                } else {
                    availableTimeText.textContent = '';
                    availableTimeDiv.style.display = 'none';
                }
                
                // Update doctor fee
                doctorFeeText.textContent = fee ? ('Rs.' + fee) : '-';
                
                // Clear location dropdown except for the first option
                locationDropdown.innerHTML = '<option value="">-- Select Location --</option>';
                
                // Add only the doctor's assigned location
                if (locationId && locationId !== "null" && locationId !== "") {
                    var matchingLocation = allLocationOptions.find(option => option.value === locationId);
                    if (matchingLocation) {
                        var newOption = matchingLocation.cloneNode(true);
                        locationDropdown.appendChild(newOption);
                        locationDropdown.selectedIndex = 1; // Select the doctor's location
                    }
                }
            }
            
            // Handle doctor dropdown change
            doctorDropdown.addEventListener('change', updateDoctorDetails);
            
            // Show/hide banking details based on pay now amount
            var payNowAmountInput = document.getElementById('payNowAmount');
            var bankingDetailsDiv = document.getElementById('bankingDetails');
            
            function toggleBankingDetails() {
                var amount = parseFloat(payNowAmountInput.value) || 0;
                if (amount > 0) {
                    bankingDetailsDiv.style.display = 'block';
                } else {
                    bankingDetailsDiv.style.display = 'none';
                }
            }
            
            payNowAmountInput.addEventListener('input', toggleBankingDetails);
            payNowAmountInput.addEventListener('change', toggleBankingDetails);
            
            // Card number formatting
            var cardNumberInput = document.querySelector('input[name="CardNumber"]');
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function(e) {
                    var value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
                    var formattedValue = value.match(/.{1,4}/g)?.join('-') || value;
                    if (formattedValue !== e.target.value) {
                        e.target.value = formattedValue;
                    }
                });
            }
            
            // Expiry date formatting
            var expiryInput = document.querySelector('input[name="ExpiryDate"]');
            if (expiryInput) {
                expiryInput.addEventListener('input', function(e) {
                    var value = e.target.value.replace(/\D/g, '');
                    if (value.length >= 2) {
                        value = value.substring(0,2) + '/' + value.substring(2,6);
                    }
                    e.target.value = value;
                });
            }
            
            // Initialize on page load if a doctor is pre-selected
            if (doctorDropdown.selectedIndex > 0) {
                updateDoctorDetails();
            }
        });
    </script>
}
