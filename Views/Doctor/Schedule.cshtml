@model HealthCareApp.Models.Doctor
@{
    ViewData["Title"] = "Manage Schedule";
    var appts = ViewBag.Appointments as List<HealthCareApp.Models.Appointment> ?? new List<HealthCareApp.Models.Appointment>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">ðŸ—“ Manage Schedule</h1>
        </div>
    </div>

    <div class="row">
        <!-- Availability card hidden by user previously; leave structure ready -->
        <!-- <div class="col-lg-5"> -->
        <!-- Keep commented per user's change -->
        <!-- </div> -->
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Upcoming Appointments</h6>
                </div>
                <div class="card-body">
                    @if (appts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered align-middle">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Patient</th>
                                        <th>Reschedule</th>
                                        <th>Consultation Notes / Prescription</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var a in appts)
                                    {
                                        var dateId = $"newDate_{a.AppointmentID}";
                                        var timeId = $"newTime_{a.AppointmentID}";
                                        var notesId = $"notes_{a.AppointmentID}";
                                        var rxId = $"medicine_{a.AppointmentID}";
                                        <tr>
                                            <td>@a.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                            <td>@(a.AppointmentTime)</td>
                                            <td>@a.Patient?.Name</td>
                                            <td>
                                                <form asp-action="RescheduleAppointment" method="post" class="d-inline">
                                                    <input type="hidden" name="appointmentId" value="@a.AppointmentID" />
                                                    <div class="mb-1">
                                                        <label for="@dateId" class="form-label">Date</label>
                                                        <input id="@dateId" type="date" name="newDate" class="form-control form-control-sm" value="@a.AppointmentDate.ToString("yyyy-MM-dd")" />
                                                    </div>
                                                    <div class="mb-2">
                                                        <label for="@timeId" class="form-label">Time</label>
                                                        <input id="@timeId" type="time" name="newTime" class="form-control form-control-sm" />
                                                    </div>
                                                    <button type="submit" class="btn btn-sm btn-warning">Reschedule</button>
                                                </form>
                                                <form asp-action="CancelAppointment" method="post" class="d-inline">
                                                    <input type="hidden" name="appointmentId" value="@a.AppointmentID" />
                                                    <button type="submit" class="btn btn-sm btn-danger mt-2">Cancel</button>
                                                </form>
                                            </td>
                                            <td>
                                                <form asp-action="UpdateConsultationNotes" method="post">
                                                    <input type="hidden" name="appointmentId" value="@a.AppointmentID" />
                                                    <div class="mb-2">
                                                        <label for="@notesId" class="form-label">Notes</label>
                                                        <textarea id="@notesId" name="notes" class="form-control" rows="4" placeholder="Enter consultation notes..."></textarea>
                                                    </div>
                                                    <div class="mb-2">
                                                        <label for="@rxId" class="form-label">Prescription</label>
                                                        <textarea id="@rxId" name="medicine" class="form-control" rows="3" placeholder="Enter prescription details..."></textarea>
                                                    </div>
                                                    <button type="submit" class="btn btn-sm btn-info">Save</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-calendar-times fa-3x mb-3"></i>
                            <p>No upcoming appointments</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
