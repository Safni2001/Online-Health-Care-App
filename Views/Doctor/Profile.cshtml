@model HealthCareApp.Models.Doctor
@{
    ViewData["Title"] = "Doctor Profile";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">ðŸ‘¤ Update Profile</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Profile Details</h6>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <span class="text-success">@TempData["SuccessMessage"]</span>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <span class="text-danger">@TempData["ErrorMessage"]</span>
                    }
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contact No</label>
                            <input asp-for="ContactNo" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Fees</label>
                            <input asp-for="Fees" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Available Time</label>
                            <input asp-for="AvailableTime" class="form-control" placeholder="e.g., 09:00-17:00" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Specialty ID</label>
                            <input asp-for="SpecialID" class="form-control" type="number" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Location ID</label>
                            <input asp-for="LocationID" class="form-control" type="number" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Doctor")" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
