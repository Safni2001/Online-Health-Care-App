@model HealthCareApp.Models.Doctor
@{
    ViewData["Title"] = "Doctor Profile";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">
                <i class="fas fa-user-md text-primary"></i> Update Profile
            </h1>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-gradient-primary py-4">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-edit"></i> Profile Details
                    </h6>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Profile" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user text-primary"></i> Full Name
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your full name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone text-success"></i> Contact Number
                                </label>
                                <input asp-for="ContactNo" class="form-control form-control-lg" placeholder="Enter contact number" />
                                <span asp-validation-for="ContactNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-money-bill-wave text-warning"></i> Consultation Fees (Rs.)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">Rs.</span>
                                    <input asp-for="Fees" class="form-control form-control-lg" type="number" step="0.01" min="0" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Fees" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-clock text-info"></i> Available Time
                                </label>
                                <input asp-for="AvailableTime" class="form-control form-control-lg" placeholder="e.g., 09:00 AM - 05:00 PM" />
                                <small class="form-text text-muted">Specify your working hours</small>
                                <span asp-validation-for="AvailableTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-stethoscope text-primary"></i> Medical Specialty
                                </label>
                                <select asp-for="SpecialID" class="form-select form-select-lg">
                                    <option value="">-- Select Specialty --</option>
                                    @if (ViewBag.Specialties != null)
                                    {
                                        foreach (var specialty in ViewBag.Specialties)
                                        {
                                            <option value="@specialty.SpecialID" selected="@(Model.SpecialID == specialty.SpecialID ? "selected" : null)">
                                                @specialty.SpecialtyName
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="SpecialID" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-map-marker-alt text-danger"></i> Practice Location
                                </label>
                                <select asp-for="LocationID" class="form-select form-select-lg">
                                    <option value="">-- Select Location --</option>
                                    @if (ViewBag.Locations != null)
                                    {
                                        foreach (var location in ViewBag.Locations)
                                        {
                                            <option value="@location.LocationID" selected="@(Model.LocationID == location.LocationID ? "selected" : null)">
                                                @location.LocationName
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="LocationID" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Doctor")" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
