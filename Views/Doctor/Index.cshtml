@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-2">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2 text-gray-800">
                        <i class="fas fa-user-md text-primary"></i> Doctor Dashboard
                    </h1>
                    <p class="text-muted mb-0">Welcome back, Dr. @Context.Session.GetString("Username")!</p>
                </div>
                <div class="text-end">
                    <small class="text-muted">Today: @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>
    <!-- Quick Actions Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-4 border-bottom">
                    <h5 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-bolt text-warning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Appointments", "Doctor")"
                                class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-calendar-alt fa-2x mb-3"></i>
                                <span class="fw-bold">View Appointments</span>
                                <small class="text-white-50 mt-1">Manage your schedule</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Patients", "Doctor")"
                                class="btn btn-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-user-injured fa-2x mb-3"></i>
                                <span class="fw-bold">My Patients</span>
                                <small class="text-white-50 mt-1">Patient records</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Profile", "Doctor")"
                                class="btn btn-info btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-user-edit fa-2x mb-3"></i>
                                <span class="fw-bold">Update Profile</span>
                                <small class="text-white-50 mt-1">Edit your information</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Schedule", "Doctor")"
                                class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none"
                                style="min-height: 120px;">
                                <i class="fas fa-calendar-check fa-2x mb-3"></i>
                                <span class="fw-bold">Manage Schedule</span>
                                <small class="text-white-50 mt-1">Consultation notes</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
